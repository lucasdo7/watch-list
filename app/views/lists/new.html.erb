<div class="container mt-3">
  <h1>Create a list</h1>
  <%= simple_form_for @list do |m| %>
    <%= m.error_notification %>
    <%= m.error_notification message: m.object.errors[:base].to_sentence if m.object.errors[:base].present? %>

    <%= m.input :name, placeholder: 'type your list name' %>

    <%= m.button :submit, class: 'btn btn-success btn-sm' %>
  <% end %>
    <%= link_to 'Back', root_path, class: 'btn btn-danger btn-sm' %>
</div>
