<div class="container">
  <h1> <%= @list.name %> </h1>

  <ul>
    <% @list.movies.each do |movie| %>
      <li>
        <%= movie.title %>
          <% movie.bookmarks.each do |mb|%>
              <%= mb.comment %>
          <% end %>
      </li>
    <% end %>

  </ul>

  <%= link_to 'Back', root_path, class: 'btn btn-danger btn-sm' %>

  <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
</div>
